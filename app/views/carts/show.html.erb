<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p> 
<% end %>
<div class="panel panel-default">
  <div class="panel-body">

<% @cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= number_to_currency(line_item.item.price.to_f/100) %> | Quantity: <%= line_item.quantity %> | <% if line_item.item.inventory < 5 %>
    <strong style="color:#c20303;">There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>
</div>
</div>